#include <iostream>
#include <string>

using namespace std;

class Student {
    string Nume;
    int Varsta;

public:
    void IntroducereInformatiiStudent() {
        cout<<"\nIntroduceti numele studentului:";fflush (stdin); cin>>Nume;
        cout<<"\nIntroduceti varsta studentului:"; cin >>Varsta; }

    void AfisareInformatiiStudent() {
        cout<<"\nNumele studentului:" << Nume << endl;
        cout<<"\nVarsta studentului:"<< Varsta << endl; }
};

class NoteStudent : public Student {
public:
    int Prima;
    int aDoua;
    int aTreia;
    float Media;

public:
    void IntroducereNote() {
        IntroducereInformatiiStudent();
        cout << "\nIntroduceti prima nota:"; cin >> Prima;
        cout << "\nIntroduceti a doua nota:"; cin >> aDoua;
        cout << "\nIntroduceti a treia nota:"; cin >> aTreia; }

    void AfisareNote() {
        AfisareInformatiiStudent();
        cout << "\nPrima nota:" << Prima << endl;
        cout << "\nA doua nota:" << aDoua << endl;
        cout << "\nA treia nota:" << aTreia << endl; }
};

class RezultateStudent: public NoteStudent {
public:
    int calculare() {
        Media = (Prima + aDoua + aTreia) / 3.0;
        return Media; }
};

class Universitate {
    string NumeUniversitate;
    int AnFondare;

public:
    void IntroducereInformatiiUniversitate() {
        cout<<"\nIntroduceti denumirea universitatii:";fflush (stdin); cin>>NumeUniversitate;
        cout<<"\nIntroduceti anul fondarii:"; cin >> AnFondare; }

    void AfisareInformatiiUniversitate() {
        cout<<"Denumirea universitatii:" << NumeUniversitate << endl;
        cout<<"Anul fondarii:" << AnFondare << endl; }
} ;

int main() {

    Universitate arr;
    cout << "\nIntroduceti numarul de universitati:"; int cnt; cin >> cnt;

    int s = 0;
    for (int i = 0; i < cnt; i++) {
        arr.IntroducereInformatiiUniversitate ();
        RezultateStudent str;
        cout << "\nIntroduceti numarul de studenti:"; int n; cin >> n;
        for (int j = 0; j < n; j++) {
            str.IntroducereNote();
            str.AfisareNote();
            str.calculare();
            s += str.calculare(); }
        arr.AfisareInformatiiUniversitate();

        cout << "Media generala:" << (float) s / n << endl; }

    return 0; }
